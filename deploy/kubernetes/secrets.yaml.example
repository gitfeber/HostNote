apiVersion: v1
kind: Secret
metadata:
  name: hostnote-encryption-secret
  namespace: hostnote
type: Opaque
stringData:
  # Generate a random 32-byte key: openssl rand -hex 32
  ENCRYPTION_KEY: "replace_with_your_32_byte_hex_key"

---
apiVersion: v1
kind: Secret
metadata:
  name: oauth2-proxy-hostnote-secret
  namespace: hostnote
type: Opaque
stringData:
  # OAuth2 Proxy Secrets
  CLIENT_ID: "your_github_client_id"
  CLIENT_SECRET: "your_github_client_secret"
  COOKIE_SECRET: "your_cookie_secret_at_least_16_bytes"
